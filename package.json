{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "Cogent Labs Image Processing Api Gateway",
  "author": "Alexandre Balon-Perin<abalonperin1@gmail.com>",
  "main": "server.js",
  "license": "UNLICENSED",
  "dependencies": {
    "express": "^4.16.4",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "multer": "^1.4.1",
    "request": "^2.88.0",
    "stream-buffers": "^3.0.2 ",
    "morgan": "^1.9.1",
    "method-override": "^3.0.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^9.0.1",
    "mocha": "^6.1.4",
    "pre-commit": "^1.2.2",
    "prettier": "^1.17.0",
    "standard": "*",
    "supertest": "^4.0.2"
  },
  "repository": {
    "type": "git"
  },
  "scripts": {
    "prettierjs": "prettier --parser=babel --write 'src/**/*.js'",
    "eslint": "eslint src",
    "eslintfix": "eslint --fix src",
    "start": "node server.js",
    "stop": "pkill -f api-gateway &2> /dev/null",
    "dev": "npm stop & rm -rf localhost & npm start",
    "clean": "standard --fix & npm run prettierjs & npm run eslintfix",
    "git-add": "git add -u",
    "test": "mocha ./tests --recursive --exit"
  },
  "pre-commit": [
    "clean",
    "git-add"
  ]
}
