{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "Cogent Labs Image Processing Api Gateway",
  "author": "Alexandre Balon-Perin<abalonperin1@gmail.com>",
  "main": "server.js",
  "license": "UNLICENSED",
  "dependencies": {
    "express": "^4.16.4",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^9.0.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.17.0",
    "standard": "*"
  },
  "repository": {
    "type": "git"
  },
  "scripts": {
    "prettierjs": "prettier --parser=babel --write 'src/**/*.js'",
    "eslint": "eslint src",
    "eslintfix": "eslint --fix src",
    "start": "node server.js",
    "stop": "pkill -f api-gateway &2> /dev/null",
    "dev": "npm stop & rm -rf localhost & npm start",
    "clean": "standard --fix & npm run prettierjs & npm run eslintfix",
    "pre-commit-clean": "pre-commit-clean"
  },
  "pre-commit-clean": {
    "*.js": [
      "clean",
      "git add",
      "eslint --max-warnings 0"
    ]
  },
  "pre-commit": [
    "pre-commit-clean"
  ]
}
